<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF2FF"
    android:padding="16dp">

    <!-- Logo and App Name -->
    <LinearLayout
        android:id="@+id/logoSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo"
        android:layout_gravity="center" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />

    </LinearLayout>

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transform signs into meaningful connections\nby turning it into seamless communication"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_below="@id/logoSection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To begin, simply tap the camera button and start recording your sign. Your translation will appear shortly after."
        android:textSize="14sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_below="@id/subTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Camera Button at the Bottom Center -->
    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_background"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Camera Button"
        android:padding="16dp"
        android:tint="#5974A4" />

</RelativeLayout>
